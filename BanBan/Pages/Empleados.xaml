<Page x:Class="BanBan.Pages.Empleados"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BanBan.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Empleados">

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Label x:Name="lbTitulo" 
            Content="Empleados" 
            HorizontalAlignment="Center" VerticalAlignment="Center" 
            Width="130" Height="50" 
            TextBlock.FontSize="25" Grid.ColumnSpan="2"/>
        <Label x:Name="lbNombre" 
               Content="Nombre:" 
               HorizontalAlignment="Left" VerticalAlignment="Center" 
               Width="60" Height="30" 
               Grid.Row="1" 
               Margin="40,0,0,0"/>
        <Button x:Name="tbNombre" 
                HorizontalAlignment="Right" VerticalAlignment="Center" 
                Width="270" Height="30" 
                Grid.Row="1"
                Margin="0,0,20,0"/>
        <Label x:Name="lbApellido" 
               Content="Apellido:" 
               HorizontalAlignment="Left" VerticalAlignment="Center" 
               Width="60" Height="30" 
               Grid.Row="1" Grid.Column="1"
               Margin="40,0,0,0"/>
        <Button x:Name="tbApellido" 
                HorizontalAlignment="Right" VerticalAlignment="Center" 
                Width="270" Height="30" 
                Grid.Row="1" Grid.Column="1"
                Margin="0,0,20,0"/>
        <Label x:Name="lbDUI" 
               Content="DUI:" 
               HorizontalAlignment="Left" VerticalAlignment="Center" 
               Width="60" Height="30" 
               Grid.Row="2" 
               Margin="40,0,0,0"/>
        <Button x:Name="tbDUI" 
                HorizontalAlignment="Right" VerticalAlignment="Center" 
                Width="270" Height="30" 
                Grid.Row="2"
                Margin="0,0,20,0"/>
        <Label x:Name="lbNIT" 
               Content="NIT:" 
               HorizontalAlignment="Left" VerticalAlignment="Center" 
               Width="60" Height="30" 
               Grid.Row="2" Grid.Column="1"
               Margin="40,0,0,0"/>
        <Button x:Name="tbNIT" 
                HorizontalAlignment="Right" VerticalAlignment="Center" 
                Width="270" Height="30" 
                Grid.Row="2" Grid.Column="1"
                Margin="0,0,20,0"/>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
    </Grid>
</Page>
