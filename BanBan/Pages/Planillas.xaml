<Page x:Class="BanBan.Pages.Planillas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BanBan.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Planillas">
    <Grid>
        <Label x:Name="lbTitulo" 
               Content="Planillas" 
               TextBlock.FontSize="24" 
               Grid.Column="2" Grid.Row="1"
               HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
        <StackPanel x:Name="StackPanel1" Orientation="Horizontal" HorizontalAlignment="Stretch" Grid.Row="2" Grid.ColumnSpan="2"></StackPanel>
        <StackPanel x:Name="StackPanel2" Orientation="Horizontal" HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2"></StackPanel>
        <StackPanel x:Name="StackPanel3" Orientation="Horizontal" HorizontalAlignment="Stretch" Grid.Row="3" Grid.ColumnSpan="2"></StackPanel>
        <StackPanel x:Name="StackPanel4" Orientation="Horizontal" HorizontalAlignment="Stretch" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2"></StackPanel>
        <StackPanel x:Name="StackPanel5" Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="4" Grid.RowSpan="2"></StackPanel>
        <DataGrid x:Name="dgvPlanilla" HorizontalAlignment="Stretch" 
                  Margin="60,20,40,30" Grid.Row="4" Grid.ColumnSpan="5"/>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="36*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
    </Grid>
</Page>
